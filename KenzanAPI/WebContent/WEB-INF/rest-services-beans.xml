<?xml version="1.1" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     	xmlns:cxf="http://cxf.apache.org/core"
		xmlns:jaxws="http://cxf.apache.org/jaxws"
		xmlns:jaxrs="http://cxf.apache.org/jaxrs"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:util="http://www.springframework.org/schema/util"
		xmlns:couchdb="http://www.ektorp.org/schema/couchdb"
		xsi:schemaLocation="
			http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
			http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
    		http://www.ektorp.org/schema/couchdb http://www.ektorp.org/schema/couchdb/couchdb.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml"/>
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>
	
	<context:component-scan base-package="com.kenzan.api" />
	<context:component-scan base-package="com.kenzan.api.dao.couchdb.util"/>
	<context:component-scan base-package="com.kenzan.api.dao.impl"/>
	<context:component-scan base-package="org.ektorp.spring"/>
	
	
	 <util:properties id="couchdbProperties" location="classpath:/couchdb.properties"/>

    <!-- couchdb:instance id="localCouchDBInstance" url="http://localhost:5984" properties="couchdbProperties" /-->
    
    <couchdb:instance id="ec2CouchDBInstance" properties="couchdbProperties" />
   
    <couchdb:database id="employeeCouchdb" name="kaizenemployee" instance-ref="ec2CouchDBInstance" />
		
	<bean id="initialDataLoader" class="org.ektorp.spring.InitialDataLoader" autowire="byType" init-method="loadInitialData"/>
        
    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

	<bean id="jsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
	
  	<jaxrs:server id="employeeMS" address="/employee">
  	<jaxrs:features>
     <cxf:logging/>
	</jaxrs:features>
  		<jaxrs:serviceBeans>
  			<ref bean="employeeservice"/>
  		</jaxrs:serviceBeans>
  		<jaxrs:providers>
			<ref bean='jsonProvider' />
		</jaxrs:providers>
  	</jaxrs:server>

</beans>